@model IEnumerable<Models.Person>

@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/_ViewStart.cshtml";
}

<h2>Index</h2>

<div class="row">
	<div class="col-sm-12">
		@Html.ActionLink("Create New", "Create")
	</div>
</div>

<div class="row">
	<div class="col-sm-12 table-responsive">
		<table class="table table-bordered table-striped table-hover">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Role.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Age)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.IsActive)
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Role.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Age)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.IsActive)
					</td>
					<td>
						@Html.ActionLink("Edit",MVC.People.Edit(item.Id)) |
						@Html.ActionLink("Details", MVC.People.Details(item.Id)) |
						@Html.ActionLink("Delete", MVC.People.Delete(item.Id))
					</td>
				</tr>
			}

		</table>

	</div>
</div>
